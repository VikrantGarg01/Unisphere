{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "excludeFiles": "**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://unisphere-production-1e25.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
